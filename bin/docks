#!/bin/sh
CURR_PATH=$(pwd)
DOCKERFILE_PATH="/home/aorith/githome/odroid/docker"
cd $DOCKERFILE_PATH

f_stop() {
    echo "Stopping docker appliances..."
    docker stop $(docker ps -a -q) 2>/dev/null
    sudo systemctl stop docker
    sudo systemctl stop containerd
}

f_start() {
    echo "Starting docker appliances..."
    sudo systemctl start docker
    sudo systemctl start containerd
    docker run -d -p 8000:8000 -p 9000:9000 --name=portainer --restart=always -v /var/run/docker.sock:/var/run/docker.sock -v /home/aorith/.config/docker_configs/portainer:/data portainer/portainer
    docker-compose -f $DOCKERFILE_PATH/media/docker-compose.yml -p media up -d torproxy
    docker-compose -f $DOCKERFILE_PATH/media/docker-compose.yml -p media up -d jackett
    docker-compose -f $DOCKERFILE_PATH/media/docker-compose.yml -p media up -d sonarr
    docker-compose -f $DOCKERFILE_PATH/media/docker-compose.yml -p media up -d radarr
    docker-compose -f $DOCKERFILE_PATH/media/docker-compose.yml -p media up -d jellyfin
    docker-compose -f $DOCKERFILE_PATH/media/docker-compose.yml -p media up -d bazarr
    docker-compose -f $DOCKERFILE_PATH/calibre/docker-compose.yml -p calibre up -d calibre-web
}

f_prune() {
    echo "Pruning all..."
    f_stop
    sudo systemctl start docker
    sudo docker system prune --all -f
    sudo systemctl stop docker
    sudo systemctl stop containerd
}

case "$1" in
    stop)
        f_stop
        ;;
    start)
        f_start
        ;;
    prune)
        f_prune
        ;;
    *)
        echo "Usage: $(basename $0) stop|start|prune"
        exit 1
        ;;
esac

cd $CURR_PATH
exit 0
